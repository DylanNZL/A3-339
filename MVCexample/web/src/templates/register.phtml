<script>

    let username = document.getElementById('username');

    username.addEventListener("input", function (event) {
//        console.log(event);
        if (username.value !== "") {
            checkUserName();
            console.log(username.value)
        }
    });

    function validateForm() {
        const pw = document.forms['register']['password'].value;
        const pw2 = document.getElementById("repeat");
        if (pw !== pw2) {
            passwordMismatch();
            return false;
        } else {

            return true;
        }
    }

    function passwordMismatch() {
        const pwMismatch = document.getElementById('pwMismatch');
        pwMismatch.display("block");

    }


    function checkUserName() {
//        console.log(username.value);
        const usernameToCheck = username.value;
        let xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            if (this.readyState === 4 && this.status === 200) {
                const data = JSON.parse(this.responseText);
                console.log(data);
                const div = document.getElementById('usernameDiv');
                if (data.valid) {
                    div.classList.add('has-success');
                    div.classList.remove('has-error');
                } else {
                    div.classList.add('has-error');
                    div.classList.remove('has-success');
                }
            }
        };
        xhttp.open("POST", "/checkUserName", true);
        xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
        xhttp.send("username=" + usernameToCheck);
    }
</script>
